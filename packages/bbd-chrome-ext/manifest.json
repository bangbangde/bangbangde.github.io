{
  "name": "Bangbangde",
  "description": "build for bangbangde.github.io",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "bangabngde",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "declarativeContent"
  ],
  "host_permissions": [
    "*://*.codebuff.tech/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["resources/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "scripts/service-worker.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content-script.js"],
      "matches": [
        "*://*.codebuff.tech/*"
      ]
    }
  ]
}